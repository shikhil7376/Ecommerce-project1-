
<%- include("../layout/customerside/header") %>
 <%-include("../layout/customerside/navbar") %>

<div class="site-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7">
                <h2 class="h3 mb-3 text-black">Edit Address</h2>
            </div>
            <div class="col-md-7">
                <form action="/user/profile/edit-address" method="post">
                    <div class="p-3 p-lg-5 border">
                        <div class="form-group row">
                            <div class="col-md-6">
                               <input type="hidden" name="addressId" value="<%= address._id %>"> 
                                <label for="pincode" class="text-black">Pincode <span
                                        class="text-danger">*</span></label>
                                <input type="number" class="form-control" name="pincode" value="<%= address.pincode %>" >
                            </div>
                            <div class="col-md-6">
                                <label for="state" class="text-black">State <span
                                        class="text-danger">*</span></label>
                                <input type="text" class="form-control" name="state"value="<%= address.state %>" >
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label for="city" class="text-black">City <span
                                        class="text-danger">*</span></label>
                                <input type="text" class="form-control" name="city" value="<%= address.city %>"  >
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label for="building" class="text-black">House No., Building Name </label>
                                <input type="text" class="form-control" name="building" value="<%= address.building %>">
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-12">
                                <label for="area" class="text-black">Road Name, Area, Colony </label>
                                <input type="text" class="form-control" name="area" value="<%= address.area %>">
                            </div>
                        </div>
                        <p class="text-danger"></p>
                        <div class="form-group row">
                            <div class="col-lg-12">
                                <button type="submit" class="btn btn-secondary btn-lg btn-block">
                                    <span>Edit Address</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include("../layout/customerside/footer") %>